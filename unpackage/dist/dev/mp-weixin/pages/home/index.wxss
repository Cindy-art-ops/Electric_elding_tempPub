.page {
  padding: 24rpx;
}
.section {
  margin-bottom: 28rpx;
}
.recommend .reco-list {
  white-space: nowrap;
}
.recommend .reco-item {
  display: inline-flex;
  flex-direction: column;
  width: 360rpx;
  margin-right: 20rpx;
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
  border: 1rpx solid #ececef;
  box-shadow: 0 8rpx 26rpx rgba(0, 0, 0, 0.07);
}
.recommend .reco-cover {
  width: 360rpx;
  height: 210rpx;
  background: #f2f2f2;
}
.recommend .reco-name {
  font-size: 28rpx;
  padding: 16rpx 16rpx 18rpx;
  color: #111;
}
.chapters .chapter-card {
  background: #fff;
  border: 1rpx solid #ececef;
  border-radius: 18rpx;
  padding: 22rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 8rpx 26rpx rgba(0, 0, 0, 0.07);
}
.chapters .chapter-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.chapters .chapter-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111;
}
.chapters .actions button {
  margin-left: 12rpx;
}
.chapters .progress {
  height: 14rpx;
  border-radius: 14rpx;
  background: #ebebf0;
  overflow: hidden;
}
.chapters .bar {
  height: 100%;
  background: #d32f2f;
}
.chapters .progress-text {
  font-size: 24rpx;
  color: #6d6d72;
  margin-top: 10rpx;
}
.btn-primary {
  background: #d32f2f;
  color: #fff;
}
.btn-outline {
  color: #d32f2f;
  border: 2rpx solid #d32f2f;
  background: #fff;
}